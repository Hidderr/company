<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_root_recycler_item_root_video_fragment"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="40px"

                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_marginBottom="40px"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_desc_recycler_item_root_video_fragment"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_marginLeft="10px"
                  android:text="推荐片单"
                  android:textSize="38px"
                  android:textColor="@color/fragment_video_text_title_blue"
                  android:layout_height="wrap_content"/>

        <View android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_enter_recycler_item_root_video_fragment"
                  android:visibility="invisible"
                  android:text="查看全部"
                  android:ellipsize="end"
                  android:drawableRight="@drawable/fragment_video_root_item_enter"
                  android:layout_marginRight="36px"
                  android:maxLines="1"
                  android:textSize="24px"
                  android:drawablePadding="10px"
                  android:textColor="#b9c6d8"
                  android:layout_height="wrap_content"/>

    </LinearLayout>



    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_marginLeft="10px"
                                            android:id="@+id/recyclerview_recycler_item_root_video_fragment"
                                            android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <View android:layout_width="match_parent"
          android:background="#ebf0f4"
          android:layout_height="23px"/>

</LinearLayout>