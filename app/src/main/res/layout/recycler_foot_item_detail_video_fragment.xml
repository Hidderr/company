<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View android:layout_width="match_parent"
          android:layout_marginBottom="40px"
          android:background="#e9eff5"
          android:layout_height="1px"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">


        <ImageView android:layout_width="42px"
                   android:layout_marginLeft="40px"
                   android:visibility="gone"
                   android:id="@+id/iv_delete_detail_recycler_foot_item_video_fragment"
                   android:src="@drawable/selector_delete"
                   android:scaleType="fitXY"
                   android:layout_marginRight="25px"
                   android:layout_height="42px"/>


        <ImageView android:layout_width="196px"
                   android:id="@+id/iv_detail_recycler_foot_item_video_fragment"
                   android:src="@drawable/icon_default"
                   android:scaleType="fitXY"
                   android:layout_marginRight="25px"
                   android:layout_height="294px"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginBottom="28px"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:id="@+id/tv_title_detail_recycler_item_video_fragment"
                          android:text="影视标题"
                          android:ellipsize="end"
                          android:maxLines="1"
                          android:textSize="34px"
                          android:textColor="@color/fragment_video_text_title_blue"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          android:gravity="end"
                          android:id="@+id/tv_source_detail_recycler_item_video_fragment"
                          android:text="豆瓣评分：9.6"
                          android:ellipsize="end"
                          android:maxLines="1"
                          android:textSize="22px"
                          android:textColor="#24d77f"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_area_detail_recycler_item_video_fragment"
                      android:text="地区："
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="26px"
                      android:layout_marginBottom="20px"
                      android:textColor="#b9c6d8"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_director_detail_recycler_item_video_fragment"
                      android:text="导演："
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="26px"
                      android:layout_marginBottom="20px"
                      android:textColor="#b9c6d8"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_actor_detail_recycler_item_video_fragment"
                      android:text="演员："
                      android:ellipsize="end"
                      android:maxLines="2"
                      android:textSize="26px"
                      android:layout_marginBottom="20px"
                      android:textColor="#b9c6d8"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_release_time_detail_recycler_item_video_fragment"
                      android:text="上映时间"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="26px"
                      android:textColor="#b9c6d8"
                      android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>