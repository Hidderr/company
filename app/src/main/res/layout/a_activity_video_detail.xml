<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:layout_marginBottom="40px"
              android:background="#e9eff5"
              android:layout_height="5px"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            layout="@layout/a_recycler_foot_item_detail_video_fragment"/>

        <View android:layout_width="match_parent"
              android:layout_marginTop="40px"
              android:background="#e9eff5"
              android:layout_height="5px"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginLeft="36px"
                      android:layout_marginBottom="40px"
                      android:gravity="center_vertical"
                      android:layout_marginTop="40px"
                      android:layout_marginRight="36px"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="140px"
                       android:id="@+id/iv_delete_detail_recycler_foot_item_video_fragment"
                       android:src="@drawable/icon_default"
                       android:scaleType="fitXY"
                       android:layout_marginRight="40px"
                       android:layout_height="62px"/>

            <ImageView android:layout_width="62px"
                       android:id="@+id/iv1_delete_detail_recycler_foot_item_video_fragment"
                       android:src="@drawable/shape_circle"
                       android:scaleType="fitXY"
                       android:layout_marginRight="25px"
                       android:layout_height="62px"/>

            <View android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="40px"/>

            <TextView android:layout_width="wrap_content"
                      android:text="分享"
                      android:drawablePadding="10px"
                      android:gravity="center"
                      android:layout_marginRight="40px"
                      android:drawableLeft="@drawable/activity_video_detail_share"
                      android:id="@+id/iv11_delete_detail_recycler_foot_item_video_fragment"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="收藏"
                      android:drawablePadding="10px"
                      android:gravity="center"
                      android:drawableLeft="@drawable/selector_collection"
                      android:id="@+id/iv12_delete_detail_recycler_foot_item_video_fragment"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:background="#e9eff5"
              android:layout_height="23px"/>



        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_title_recycler_foot_video_fragment"
                  android:layout_marginTop="40px"
                  android:layout_marginBottom="40px"
                  android:ellipsize="end"
                  android:textStyle="bold"
                  android:maxLines="1"
                  android:layout_marginLeft="36px"
                  android:layout_marginRight="36px"
                  android:text="影视标题"
                  android:textSize="38px"
                  android:textColor="@color/fragment_video_text_title_blue"
                  android:layout_height="wrap_content"/>

        <com.lcodecore.extextview.ExpandTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="36px"
            android:text="影视介绍"
            app:collapseDrawable="@drawable/activity_video_detail_desc_more"
            app:expandDrawable="@drawable/titler_left_arrow_return"
            android:textColor="#A384CA"
            android:textSize="28px"
            app:arrowAlign="right"
            app:arrowPadding="8dp"
            app:arrowPosition="below"
            app:maxCollapsedLines="4" />

        <View android:layout_width="match_parent"
              android:background="#e9eff5"
              android:layout_height="23px"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv2_title_recycler_foot_video_fragment"
                  android:layout_marginTop="40px"
                  android:layout_marginBottom="40px"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_marginLeft="36px"
                  android:layout_marginRight="36px"
                  android:text="导演"
                  android:textStyle="bold"
                  android:textSize="38px"
                  android:textColor="@color/fragment_video_text_title_blue"
                  android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent"
              android:background="#e9eff5"
              android:layout_height="1px"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv3_title_recycler_foot_video_fragment"
                  android:layout_marginTop="40px"
                  android:layout_marginBottom="40px"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_marginLeft="36px"
                  android:layout_marginRight="36px"
                  android:text="主演"
                  android:textStyle="bold"
                  android:textSize="38px"
                  android:textColor="@color/fragment_video_text_title_blue"
                  android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_margin="36px"
                      android:layout_height="match_parent">

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                app:max_select="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
            </com.zhy.view.flowlayout.TagFlowLayout>

        </LinearLayout>

        <include layout="@layout/a_recycler_item_root_video_fragment"/>

    </LinearLayout>


</ScrollView>