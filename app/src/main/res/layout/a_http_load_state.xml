<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/rl_root_load_state"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/ll_error_load_state"
                  android:visibility="gone"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="200px"
                   android:id="@+id/iv_load_state"
                   android:src="@drawable/net_error"
                   android:layout_height="200px"/>
        <TextView android:layout_width="wrap_content"
                  android:text="加载出错"
                  android:textColor="@color/selector_text_blue"
                  android:id="@+id/tv_des_load_state"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:gravity="center"
              android:id="@+id/tv_loading_load_state"
              android:textColor="@color/selector_text_blue"
              android:text="正在加载中......"
              android:layout_height="wrap_content"/>



</RelativeLayout>