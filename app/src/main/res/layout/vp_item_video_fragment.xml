<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_root_vp_item_video_fragment"
              android:layout_marginRight="18px"
              android:layout_marginTop="40px"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    
    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_title_vp_item_video_fragment"
              android:text="推荐"
              android:ellipsize="end"
              android:maxLines="1"
              android:textSize="24px"
              android:textColor="@color/fragment_video_text_blue_nav"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_desc_vp_item_video_fragment"
              android:layout_marginTop="20px"
              android:ellipsize="end"
              android:maxLines="1"
              android:text="推荐描述"
              android:textSize="42px"
              android:textColor="@color/fragment_video_text_title_blue"
              android:layout_height="wrap_content"/>

    <ImageView android:layout_width="match_parent"
               android:id="@+id/iv_vp_item_video_fragment"
               android:layout_marginTop="40px"
               android:src="@drawable/icon_default"
               android:scaleType="fitXY"
               android:layout_height="345px"/>

</LinearLayout>