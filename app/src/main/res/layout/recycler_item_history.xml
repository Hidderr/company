<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"

              android:layout_height="wrap_content">

    <View android:layout_width="match_parent"
          android:layout_marginBottom="40px"
          android:background="#e9eff5"
          android:layout_height="3px"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">


        <ImageView android:layout_width="42px"
                   android:layout_marginLeft="40px"
                   android:visibility="gone"
                   android:id="@+id/iv_delete_history_recycler_foot_item_history_activity"
                   android:src="@drawable/selector_delete"
                   android:scaleType="fitXY"
                   android:layout_marginRight="25px"
                   android:layout_height="42px"/>


        <ImageView android:layout_width="196px"
                   android:layout_marginLeft="40px"
                   android:layout_marginBottom="40px"
                   android:id="@+id/iv_history_recycler_foot_item_history_activity"
                   android:src="@drawable/icon_default"
                   android:scaleType="fitXY"
                   android:layout_marginRight="25px"
                   android:layout_height="294px"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:id="@+id/tv_title_history_recycler_item_history_activity"
                          android:text="影视标题"
                          android:textStyle="bold"
                          android:ellipsize="end"
                          android:maxLines="1"
                          android:layout_marginBottom="28px"
                          android:textSize="34px"
                          android:textColor="@color/fragment_video_text_title_blue"
                          android:layout_height="wrap_content"/>


            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_duration_history_recycler_item_history_activity"
                      android:text="时长："
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="26px"
                      android:layout_marginBottom="20px"
                      android:textColor="#b9c6d8"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_year_history_recycler_item_history_activity"
                      android:text="年份："
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="26px"
                      android:layout_marginBottom="20px"
                      android:textColor="@color/actors"
                      android:layout_height="wrap_content"/>



            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center_vertical"
                          android:layout_height="wrap_content">

                <ImageView android:layout_width="52px"
                           android:id="@+id/iv_source_icon_history_recycler_foot_item_history_activity"
                           android:src="@drawable/icon_default"
                           android:scaleType="fitXY"
                           android:layout_marginRight="25px"
                           android:layout_height="52px"/>

                <TextView android:layout_width="wrap_content"
                          android:id="@+id/tv_source_history_recycler_item_history_activity"
                          android:text="影片来源"
                          android:ellipsize="end"
                          android:maxLines="1"
                          android:textSize="30px"
                          android:textColor="#000"
                          android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>